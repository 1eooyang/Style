<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Style" parent="Theme.Style.Base">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="Widget.Style.SeekBar" parent="android:Widget.Material.SeekBar">
        <item name="android:progressDrawable">@drawable/scrubber_progress_horizontal</item>
        <item name="android:indeterminateDrawable">@drawable/scrubber_progress_horizontal</item>
    </style>

    <style name="Theme.Style.Gallery" parent="Theme.Style.Gallery.Base">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
</resources>