<resources>

    <!-- Base application theme. -->
    <style name="Theme.Style.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.Style" parent="Theme.Style.Base" />

    <style name="Theme.Style.Wallpaper" parent="Theme.Style">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowShowWallpaper">true</item>
    </style>

    <style name="Theme.StyleActivity" parent="Theme.Style.Wallpaper">

    </style>

    <style name="Theme.Style.Settings" parent="Theme.Style.Wallpaper">
        <item name="colorControlActivated">#fff</item>
    </style>

    <style name="TextAppearance.ActionBar.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="Theme.Style.About" parent="Theme.Style.Wallpaper">

    </style>

    <style name="Theme.Style.Gallery.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/gallery_window_background</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="colorPrimaryDark">@color/gallery_theme_dark</item>
        <item name="colorPrimary">@color/gallery_theme</item>
        <item name="colorAccent">@color/gallery_theme</item>
    </style>

    <style name="Theme.Style.Gallery" parent="Theme.Style.Gallery.Base">

    </style>

    <style name="Theme.Style.Advance" parent="Theme.Style.Gallery.Base">
        <item name="android:windowBackground">@color/advance_window_background</item>
    </style>

    <style name="Style.SimpleFadeFragmentAnimation" parent="">
        <item name="android:fragmentFadeEnterAnimation">@animator/fade_in</item>
        <item name="android:fragmentFadeExitAnimation">@animator/fade_out</item>
    </style>

    <style name="Widget.Style.PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_background</item>
    </style>

    <style name="ThemeOverlay.Style.Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:popupMenuStyle">@style/Widget.Style.PopupMenu</item>
    </style>

    <style name="Widget.Style.TextView.SettingsSeekBarLabel" parent="">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.Style.CheckBox.Settings" parent="">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">#fff</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="Settings.Widget.SeekBar.BlurAmount" parent="Widget.Style.SeekBar">
        <item name="android:progressDrawable">@drawable/scrubber_progress_blur_amount</item>
    </style>

    <style name="Settings.Widget.SeekBar.DimAmount" parent="Widget.Style.SeekBar">
        <item name="android:progressDrawable">@drawable/scrubber_progress_dim_amount</item>
    </style>

    <style name="Settings.Widget.SeekBar.GreyAmount" parent="Widget.Style.SeekBar">
        <item name="android:progressDrawable">@drawable/scrubber_progress_grey_amount</item>
    </style>

    <style name="Widget.Style.SeekBar" parent="android:Widget.Holo.SeekBar">
        <item name="android:progressDrawable">@drawable/scrubber_progress_horizontal</item>
        <item name="android:indeterminateDrawable">@drawable/scrubber_progress_horizontal</item>
        <item name="android:thumb">@drawable/scrubber_control_selector</item>
    </style>

</resources>
